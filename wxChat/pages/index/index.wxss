/**index.wxss**/
.container{background: #fff;}
.container .QQseach{     
   text-align: center;
   background: #fff;
   box-sizing: border-box;
   padding: 20rpx;
}
.container .QQseach input{
    background: #f3f3f3;
    font-size:24rpx;
    border-radius: 12rpx;
}
.chatListItem{
   display: flex;
   justify-content: space-between;
   align-items: center;
   border-bottom: 1rpx solid #e5e5e5;
   box-sizing: border-box;
   padding:0 20rpx;
   margin:20rpx 0;
}
.chatListItem .ItemL{
  display: flex;
}
.chatListItem .ItemLogo image{
   width:66rpx;
   height:66rpx;
   margin-right:10rpx;
   border-radius: 50%;
}
.chatListItem  .ItemBox{
   font-size:24rpx;
}
.chatListItem  .ItemBox .ItemName{
  font-weight: 600;
}
.chatListItem  .ItemBox .ItemSay{
  color:#9b9db1;
}
.chatListItem .ItemTimeAndNum .ItemTime{
   font-size: 24rpx;
   color:#9b9db1;
}
.chatListItem .ItemTimeAndNum .ItemNum{
   background: red;
   text-align: center;
   color:#fff;
   font-size:24rpx;
   width:30rpx;
   padding:3rpx;
   margin:0 auto;
   border-radius:50%;
}

